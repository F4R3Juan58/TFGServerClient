<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TFGClient.Interfaz.JefeDepartamento"
             BackgroundColor="#F5F5F5"
                Shell.NavBarIsVisible="False">
    
    <!-- GRID PRINCIPAL: HEADER + CUERPO -->
    <Grid RowDefinitions="Auto, *">

        <!-- HEADER -->
        <Grid
      Grid.Row="0"
      ColumnDefinitions="Auto, *, Auto"
      BackgroundColor="#2470DC"
      HeightRequest="60">

            <!-- LOGO COMPLETO (icono + texto) -->
            <Image
        Source="EducordLogo.png"
        HeightRequest="40"
        VerticalOptions="Center"
        Margin="16,0" />

            <!-- USUARIO -->
            <StackLayout
        Grid.Column="2"
        Orientation="Horizontal"
        VerticalOptions="Center"
        Spacing="8"
        Margin="0,0,16,0">
                <Image
          Source="user.png"
          HeightRequest="24"
          VerticalOptions="Center" />
                <Label
          Text="Jefe estudios"
          TextColor="Black"
          FontAttributes="Bold"
          VerticalOptions="Center" />
            </StackLayout>
        </Grid>

        <!-- CUERPO: MENÚ LATERAL + CONTENIDO -->
        <Grid Grid.Row="1" ColumnDefinitions="250, *">

            <!-- MENÚ LATERAL -->
            <ScrollView Grid.Column="0" BackgroundColor="#F9F9F9">
                <StackLayout Padding="16" Spacing="24">

                    <!-- Sección ADMINISTRAR -->
                    <Label
            Text="ADMINISTRAR"
            TextColor="#2470DC"
            FontAttributes="Bold"
            FontSize="14" />
                    <Frame
            Padding="8"
            BackgroundColor="#E5E5E5"
            CornerRadius="5">
                        <Label
              Text="Gestión académica"
              FontSize="16"
              FontAttributes="Bold" />
                    </Frame>

                    <!-- Sección TUTORES -->
                    <StackLayout Spacing="8">
                        <Label
              Text="TUTORES"
              TextColor="#2470DC"
              FontAttributes="Bold"
              FontSize="14" />
                        <StackLayout Orientation="Horizontal" Spacing="8">
                            <Image Source="user.png" HeightRequest="20" VerticalOptions="Center" />
                            <Label Text="Detuto" FontSize="16" VerticalOptions="Center" />
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Spacing="8">
                            <Image Source="user.png" HeightRequest="20" VerticalOptions="Center" />
                            <Label Text="Encami" FontSize="16" VerticalOptions="Center" />
                        </StackLayout>
                    </StackLayout>

                    <!-- Sección PROFESORES -->
                    <StackLayout Spacing="8">
                        <Label
              Text="PROFESORES"
              TextColor="#2470DC"
              FontAttributes="Bold"
              FontSize="14" />
                        <StackLayout Orientation="Horizontal" Spacing="8">
                            <Image Source="user.png" HeightRequest="20" VerticalOptions="Center" />
                            <Label Text="Clara" FontSize="16" VerticalOptions="Center" />
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Spacing="8">
                            <Image Source="user.png" HeightRequest="20" VerticalOptions="Center" />
                            <Label Text="Ignacio" FontSize="16" VerticalOptions="Center" />
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Spacing="8">
                            <Image Source="user.png" HeightRequest="20" VerticalOptions="Center" />
                            <Label Text="Carmen" FontSize="16" VerticalOptions="Center" />
                        </StackLayout>
                    </StackLayout>

                </StackLayout>
            </ScrollView>

            <!-- ÁREA PRINCIPAL -->
            <ScrollView Grid.Column="1">
                <Grid
          Padding="16"
          RowDefinitions="Auto, Auto, Auto"
          ColumnDefinitions="*, *"
          RowSpacing="16"
          ColumnSpacing="16">

                    <!-- FILA 1 -->
                    <Button
            Grid.Row="0" Grid.Column="0"
            Text="Nuevo tutor"
            ImageSource="icon_plus.png"
            ContentLayout="Left,10"
            BorderColor="#2470DC"
            BorderWidth="2"
            CornerRadius="8"
            BackgroundColor="Transparent"
            TextColor="#2470DC"
            FontAttributes="Bold"
            HeightRequest="60"
            HorizontalOptions="Fill" />

                    <Button
            Grid.Row="0" Grid.Column="1"
            Text="Administrar profesores"
            ImageSource="icon_settings.png"
            ContentLayout="Left,10"
            BorderColor="#2470DC"
            BorderWidth="2"
            CornerRadius="8"
            BackgroundColor="Transparent"
            TextColor="#2470DC"
            FontAttributes="Bold"
            HeightRequest="60"
            HorizontalOptions="Fill" />

                    <!-- FILA 2 -->
                    <Button
            Grid.Row="1" Grid.Column="0"
            Text="Asignar asignaturas a profesores"
            ImageSource="icon_book.png"
            ContentLayout="Left,10"
            BackgroundColor="#2470DC"
            CornerRadius="8"
            TextColor="Black"
            FontAttributes="Bold"
            HeightRequest="60"
            HorizontalOptions="Fill" />

                    <Button
            Grid.Row="1" Grid.Column="1"
            Text="Modificar el horario académico"
            ImageSource="icon_calendar.png"
            ContentLayout="Left,10"
            BackgroundColor="#2470DC"
            CornerRadius="8"
            TextColor="Black"
            FontAttributes="Bold"
            HeightRequest="60"
            HorizontalOptions="Fill" />

                    <!-- FILA 3 -->
                    <Button
            Grid.Row="2" Grid.Column="0"
            Text="Bloquear asignatura"
            ImageSource="icon_block.png"
            ContentLayout="Left,10"
            BorderColor="#2470DC"
            BorderWidth="2"
            CornerRadius="8"
            BackgroundColor="Transparent"
            TextColor="#2470DC"
            FontAttributes="Bold"
            HeightRequest="60"
            HorizontalOptions="Fill" />

                    <Button
            Grid.Row="2" Grid.Column="1"
            Text="Bloquear canal"
            ImageSource="icon_lock.png"
            ContentLayout="Left,10"
            BorderColor="#2470DC"
            BorderWidth="2"
            CornerRadius="8"
            BackgroundColor="Transparent"
            TextColor="#2470DC"
            FontAttributes="Bold"
            HeightRequest="60"
            HorizontalOptions="Fill" />

                </Grid>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>
