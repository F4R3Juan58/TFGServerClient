<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TFGClient.Interfaz.Tutor"
             Title="Tutor"
             BackgroundColor="#F5F5F5"
             Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <!-- Estilo para los botones del menú lateral -->
        <Style x:Key="SidebarButtonStyle" TargetType="Label">
            <Setter Property="TextColor" Value="#333333" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="HeightRequest" Value="50"/>
        </Style>

        <!-- Estilo para el botón seleccionado -->
        <Style x:Key="SidebarButtonSelectedStyle" TargetType="Button">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="BackgroundColor" Value="#296ACC" />
            <!-- Color de fondo al seleccionar -->
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <!-- Botones de las cards -->
        <Style x:Key="CardButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#296ACC" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="6" />
        </Style>
    </ContentPage.Resources>

    <!-- GRID PRINCIPAL: HEADER + CUERPO -->
    <Grid RowDefinitions="Auto, *">
        <!-- HEADER -->
        <Grid
      Grid.Row="0"
      ColumnDefinitions="Auto, *, Auto"
      BackgroundColor="#D32F2F"
      HeightRequest="60">

            <!-- LOGO -->
            <Image
        Source="EducordLogo.png"
        HeightRequest="40"
        VerticalOptions="Center"
        Margin="16,0" />

            <!-- USUARIO -->
            <StackLayout
        Grid.Column="2"
        Orientation="Horizontal"
        VerticalOptions="Center"
        Spacing="8"
        Margin="0,0,16,0">
                <Image
          Source="user.png"
          HeightRequest="24"
          VerticalOptions="Center" />
                <Label
          Text="Tutor"
          TextColor="White"
          FontAttributes="Bold"
          VerticalOptions="Center" />
            </StackLayout>
        </Grid>

        <!-- CUERPO: MENÚ LATERAL + CONTENIDO -->
        <Grid Grid.Row="1" ColumnDefinitions="250, *">

            <VerticalStackLayout Grid.Row="1" Grid.Column="0" BackgroundColor="#FFFFFF" Spacing="10" Margin="20,20,0,0" Padding="10,0">

                <Label Text="TUTORIAS" Style="{StaticResource SidebarButtonStyle}"/>
                <CollectionView x:Name="AsignaturasCollection" SelectionMode="Single" SelectionChanged="OnTutoriaSelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding}" Padding="10" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label Text="ALUMNOS" Style="{StaticResource SidebarButtonStyle}" Margin="0,20,0,0"/>
                <CollectionView x:Name="AlumnosCollection" SelectionChanged="OnAlumnoSelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding}" Padding="10" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>

            <!-- ÁREA PRINCIPAL -->
            <ScrollView Grid.Column="1">
                <VerticalStackLayout>
                    <Label x:Name="Tutoria" Text="Tutoria Curso Grado" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center" FontSize="30" Margin="20"/>
                    <Grid
                    IsVisible="true"
          Padding="16"
          RowDefinitions="Auto, Auto, Auto"
          ColumnDefinitions="*, *"
          RowSpacing="16"
          ColumnSpacing="16">


                        <!-- Fila 1: Iniciar Tutoria -->
                        <Button
                        Grid.Row="0" Grid.ColumnSpan="2"
                        Text="Iniciar Tutoria"
                            Clicked="IniciarTutoria"
                        ImageSource="icon_trash.png"
                        ContentLayout="Left,10"
                        BackgroundColor="#D32F2F"
                        CornerRadius="8"
                        TextColor="White"
                        FontAttributes="Bold"
                        HeightRequest="60"
                        HorizontalOptions="Fill" />

                        <!-- Fila 2: Botones de acción -->
                        <Button
            Grid.Row="1" Grid.Column="0"
            Text="Asignar delegado"
                            Clicked="asignarDelegado"
            ImageSource="icon_delegado.png"
            ContentLayout="Left,10"
            BorderColor="#D32F2F"
            BorderWidth="2"
            CornerRadius="8"
            BackgroundColor="Transparent"
            TextColor="#D32F2F"
            FontAttributes="Bold"
            HeightRequest="60"
            HorizontalOptions="Fill" />

                        <Button
            Grid.Row="1" Grid.Column="1"
            Text="Abrir votación"
            ImageSource="icon_votacion.png"
            ContentLayout="Left,10"
            BorderColor="#D32F2F"
            BorderWidth="2"
            CornerRadius="8"
            BackgroundColor="Transparent"
            TextColor="#D32F2F"
            FontAttributes="Bold"
            HeightRequest="60"
            HorizontalOptions="Fill" />
                        <!-- Fila 2: Botones de acción -->
                        <Button
Grid.Row="2" Grid.Column="0"
Text="FCT"
ImageSource="icon_delegado.png"
ContentLayout="Left,10"
BorderColor="#D32F2F"
BorderWidth="2"
CornerRadius="8"
BackgroundColor="Transparent"
TextColor="#D32F2F"
FontAttributes="Bold"
HeightRequest="60"
HorizontalOptions="Fill" />

                        <Button
Grid.Row="2" Grid.Column="1"
Text="TFG"
ImageSource="icon_votacion.png"
ContentLayout="Left,10"
BorderColor="#D32F2F"
BorderWidth="2"
CornerRadius="8"
BackgroundColor="Transparent"
TextColor="#D32F2F"
FontAttributes="Bold"
HeightRequest="60"
HorizontalOptions="Fill" />

                    </Grid>


                    <Grid
                    IsVisible="false"
                    Padding="16"
                    RowDefinitions="Auto, Auto"
                    ColumnDefinitions="*, *"
                    RowSpacing="16"
                    ColumnSpacing="16">

                        <!-- Fila 3: Botones de canal -->
                        <Button
            Grid.Row="0" Grid.Column="0"
            Text="Nuevo canal de voz"
            ImageSource="icon_play.png"
            ContentLayout="Left,10"
            BorderColor="#D32F2F"
            BorderWidth="2"
            CornerRadius="8"
            BackgroundColor="Transparent"
            TextColor="#D32F2F"
            FontAttributes="Bold"
            HeightRequest="60"
            HorizontalOptions="Fill" />

                        <Button
            Grid.Row="0" Grid.Column="1"
            Text="Nuevo canal de texto"
            ImageSource="icon_text.png"
            ContentLayout="Left,10"
            BorderColor="#D32F2F"
            BorderWidth="2"
            CornerRadius="8"
            BackgroundColor="Transparent"
            TextColor="#D32F2F"
            FontAttributes="Bold"
            HeightRequest="60"
            HorizontalOptions="Fill" />

                        <!-- Fila 4: Eliminar canal -->
                        <Button
            Grid.Row="1" Grid.ColumnSpan="2"
            Text="Eliminar canal"
            ImageSource="icon_trash.png"
            ContentLayout="Left,10"
            BackgroundColor="#D32F2F"
            CornerRadius="8"
            TextColor="White"
            FontAttributes="Bold"
            HeightRequest="60"
            HorizontalOptions="Fill" />
                    </Grid>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>