<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="TFGClient.Interfaz.PaginaProfesor"
             BackgroundColor="#F5F5F5"
             Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <!-- Estilo para los botones del menú lateral -->
        <Style x:Key="SidebarButtonStyle" TargetType="Label">
            <Setter Property="TextColor" Value="#333333" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="HeightRequest" Value="50"/>
        </Style>

        <!-- Estilo para el botón seleccionado -->
        <Style x:Key="SidebarButtonSelectedStyle" TargetType="Button">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="BackgroundColor" Value="#296ACC" />
            <!-- Color de fondo al seleccionar -->
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <!-- Botones de las cards -->
        <Style x:Key="CardButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#296ACC" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="6" />
        </Style>
    </ContentPage.Resources>

    <!-- GRID PRINCIPAL: HEADER + CUERPO -->
    <Grid RowDefinitions="Auto, *">

        <!-- HEADER -->
        <Grid
  Grid.Row="0"
  ColumnDefinitions="Auto, *, Auto"
  BackgroundColor="#D32F2F"
  HeightRequest="60">

            <HorizontalStackLayout
HorizontalOptions="Center"
VerticalOptions="Center"
Spacing="8">
                <!-- Ajusta el espaciado a tu gusto -->

                <Image
    Source="logo.png"
    HeightRequest="40"
    VerticalOptions="Center"
    Margin="16,0" />

                <Label
    Text="EDUCORD"
    VerticalOptions="Center"
    TextColor="White"
    FontAttributes="Bold"
    FontSize="20" />
                <!-- Ajusta el tamaño de fuente si quieres -->
            </HorizontalStackLayout>


            <!-- USUARIO -->
            <StackLayout
    Grid.Column="2"
    Orientation="Horizontal"
    VerticalOptions="Center"
    Spacing="8"
    Margin="0,0,16,0">

                <Label
                x:Name="NombreProfesor"
        Text=""
        TextColor="White"
        FontAttributes="Bold"
        VerticalOptions="Center" />

            </StackLayout>
        </Grid>

        <!-- CUERPO: MENÚ LATERAL + ÁREA PRINCIPAL -->
        <Grid Grid.Row="1" ColumnDefinitions="250, *">
            
            <VerticalStackLayout Grid.Row="1" Grid.Column="0" BackgroundColor="#FFFFFF" Spacing="10" Margin="20,20,0,0" Padding="10,0">

                <Label Text="ASIGNATURAS" Style="{StaticResource SidebarButtonStyle}"/>
                <CollectionView x:Name="AsignaturasCollection" SelectionMode="Single" SelectionChanged="OnAsignaturaSelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding}" Padding="10" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label Text="ALUMNOS" Style="{StaticResource SidebarButtonStyle}" Margin="0,20,0,0"/>
                <CollectionView x:Name="AlumnosCollection">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding}" Padding="10" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>


            <!-- ÁREA PRINCIPAL -->
            <ScrollView Grid.Column="1">
                <StackLayout Padding="16" Spacing="16">

                    <!-- Título de la asignatura -->
                    <Label
                        x:Name="AsignaturaLabel"
            Text=""
            FontSize="24"
            FontAttributes="Bold"
            TextColor="#000" />

                    <!-- Botón Iniciar Clase -->
                    <Button
            Text="INICIAR CLASE"
            Clicked="iniciarClase"
            BackgroundColor="#D32F2F"
            TextColor="White"
            FontAttributes="Bold"
            CornerRadius="8"
            HeightRequest="50"
            HorizontalOptions="Fill" />

                    <!-- Botones de acciones -->
                    <Grid
            RowDefinitions="Auto, Auto, Auto"
            ColumnDefinitions="*, *"
            RowSpacing="16"
            ColumnSpacing="16">

                        <!-- Fila 2 -->
                        <Button
              Grid.Row="0" Grid.Column="0"
              Text="Subir documento"
              ImageSource="icon_upload.png"
              ContentLayout="Left,10"
              BorderColor="#D32F2F"
              BorderWidth="2"
              CornerRadius="8"
              BackgroundColor="Transparent"
              TextColor="#D32F2F"
              FontAttributes="Bold"
              HeightRequest="60"
                            Clicked="AbrirPopupSubirDocumento"
              HorizontalOptions="Fill" />

                        <Button
              Grid.Row="0" Grid.Column="1"
                            Clicked="ReestablecerAsignatura"
              Text="Reestablecer asignatura"
              ImageSource="icon_reset.png"
              ContentLayout="Left,10"
              BorderColor="#D32F2F"
              BorderWidth="2"
              CornerRadius="8"
              BackgroundColor="Transparent"
              TextColor="#D32F2F"
              FontAttributes="Bold"
              HeightRequest="60"
              HorizontalOptions="Fill" />

                        <!-- Fila 3 -->
                        <Button
              Grid.Row="1" Grid.Column="0"
              Text="Expulsar alumno de Clase"
                Clicked="ExpulsarAlumno"            
              ImageSource="icon_remove.png"
              ContentLayout="Left,10"
              BorderColor="#D32F2F"
              BorderWidth="2"
              CornerRadius="8"
              BackgroundColor="Transparent"
              TextColor="#D32F2F"
              FontAttributes="Bold"
              HeightRequest="60"
              HorizontalOptions="Fill" />

                        <Button
            Grid.Row="1" Grid.Column="1"
            Text="Expulsar alumno de Asignatura"
              Clicked="ExpulsarAlumnoAsignatura"            
            ImageSource="icon_remove.png"
            ContentLayout="Left,10"
            BorderColor="#D32F2F"
            BorderWidth="2"
            CornerRadius="8"
            BackgroundColor="Transparent"
            TextColor="#D32F2F"
            FontAttributes="Bold"
            HeightRequest="60"
            HorizontalOptions="Fill" />

                        <Button
              Grid.Row="2" Grid.ColumnSpan="2"
              Text="Abrir cuestionario"
                            Clicked="AbrirCuestionario"
              ImageSource="icon_checklist.png"
              ContentLayout="Left,10"
              BorderColor="#D32F2F"
              BorderWidth="2"
              CornerRadius="8"
              BackgroundColor="Transparent"
              TextColor="#D32F2F"
              FontAttributes="Bold"
              HeightRequest="60"
              HorizontalOptions="Fill" />

                    </Grid>
                </StackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>