<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
             x:Class="TFGClient.Interfaz.Administrador"
             BackgroundColor="#F5F5F5"
             Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <!-- Estilo para los botones del menÃº lateral -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="TextColor" Value="#333333" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="HeightRequest" Value="50"/>
        </Style>

        <!-- Estilo para el botÃ³n seleccionado -->
        <Style x:Key="SidebarButtonSelectedStyle" TargetType="Button">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="BackgroundColor" Value="#296ACC" />
            <!-- Color de fondo al seleccionar -->
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <!-- Botones de las cards -->
        <Style x:Key="CardButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#296ACC" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="6" />
        </Style>
    </ContentPage.Resources>

    <!-- GRID PRINCIPAL: HEADER (60px) + CUERPO -->
    <Grid RowDefinitions="Auto, *">

        <!-- HEADER -->
        <Grid
  Grid.Row="0"
  ColumnDefinitions="Auto, *, Auto"
  BackgroundColor="#296ACC"
  HeightRequest="60">

            <HorizontalStackLayout
HorizontalOptions="Center"
VerticalOptions="Center"
Spacing="8">
                <!-- Ajusta el espaciado a tu gusto -->

                <Image
    Source="logo.png"
    HeightRequest="40"
    VerticalOptions="Center"
    Margin="16,0" />

                <Label
    Text="EDUCORD"
    VerticalOptions="Center"
    TextColor="White"
    FontAttributes="Bold"
    FontSize="20" />
                <!-- Ajusta el tamaÃ±o de fuente si quieres -->
            </HorizontalStackLayout>


            <!-- USUARIO -->
            <StackLayout
    Grid.Column="2"
    Orientation="Horizontal"
    VerticalOptions="Center"
    Spacing="8"
    Margin="0,0,16,0">

                <Label
                x:Name="NombreProfesor"
        Text=""
        TextColor="White"
        FontAttributes="Bold"
        VerticalOptions="Center" />

            </StackLayout>
        </Grid>
        <Grid Grid.Row="1" ColumnDefinitions="250, *">
            <!-- ===== SIDEBAR ===== -->
            <VerticalStackLayout
            Grid.Row="1"
            Grid.Column="0"
            BackgroundColor="#FFFFFF"
            Spacing="0"
            Margin="20,20,0,0"
            Padding="10,0">

                <!-- BotÃ³n: Crear el servidor -->
                <Button
                Text="Crear Servidor"
                x:Name="SideBarCrearServidor"
                Style="{StaticResource SidebarButtonStyle}"
                Clicked="OnSidebarCrearServidorTapped"/>

                <Button
                Text="Eliminar Servidor"
                x:Name="SideBarEliminarServidor"
                Style="{StaticResource SidebarButtonStyle}"
                Clicked="OnSidebarEliminarServidorTapped"/>

                <Button
                Text="AÃ±adir Cursos"
                x:Name="SideBarAÃ±adirCurso"
                Style="{StaticResource SidebarButtonStyle}"
                Clicked="OnSidebarAÃ±adirCursoTapped"/>
                <!-- BotÃ³n: Crear el servidor -->
                <Button
                Text="Eliminar Cursos"
                x:Name="SideBarEliminarCurso"
                Style="{StaticResource SidebarButtonStyle}"
                Clicked="OnSidebarEliminarCursoTapped"/>

                <!-- BotÃ³n: Permisos -->
                <Button
                Text="GestiÃ³n de Alumnos"
                x:Name="SideBarGestionAlumnos"
                Style="{StaticResource SidebarButtonStyle}"
                Clicked="OnSidebarGestionAlumnosTapped"/>

                <Button
                Text="GestiÃ³n de Profesores"
                x:Name="SideBarGestionProfesores"
                Style="{StaticResource SidebarButtonStyle}"
                Clicked="OnSidebarGestionProfesoresTapped"/>


            </VerticalStackLayout>

            <!-- ===== ÃREA PRINCIPAL ===== -->

            <ScrollView Grid.Row="1" Grid.Column="1" Padding="20" x:Name="AreaPrincipal" IsVisible="True">
                <VerticalStackLayout Spacing="15">

                    <!-- BotÃ³n Crear Servidor -->
                    <Frame CornerRadius="4" BorderColor="#DDD" BackgroundColor="White" Padding="12" HasShadow="False">
                        <Button 
                Text="Crear Servidor" 
                Style="{StaticResource CardButtonStyle}" 
                WidthRequest="200" 
                HorizontalOptions="Center" 
                Clicked="OnSidebarCrearServidorTapped" />
                    </Frame>

                    <!-- BotÃ³n AÃ±adir Curso -->
                    <Frame CornerRadius="4" BorderColor="#DDD" BackgroundColor="White" Padding="12" HasShadow="False">
                        <Button 
                Text="AÃ±adir Curso" 
                Style="{StaticResource CardButtonStyle}" 
                WidthRequest="200" 
                HorizontalOptions="Center" 
                Clicked="OnSidebarAÃ±adirCursoTapped" />
                    </Frame>

                    <!-- BotÃ³n Eliminar Curso -->
                    <Frame CornerRadius="4" BorderColor="#DDD" BackgroundColor="White" Padding="12" HasShadow="False">
                        <Button 
                Text="Eliminar Curso" 
                Style="{StaticResource CardButtonStyle}" 
                WidthRequest="200" 
                HorizontalOptions="Center" 
                Clicked="OnSidebarEliminarCursoTapped" />
                    </Frame>

                    <!-- BotÃ³n Gestionar Alumnos -->
                    <Frame CornerRadius="4" BorderColor="#DDD" BackgroundColor="White" Padding="12" HasShadow="False">
                        <Button 
                Text="Gestionar Alumnos" 
                Style="{StaticResource CardButtonStyle}" 
                WidthRequest="200" 
                HorizontalOptions="Center" 
                Clicked="OnSidebarGestionAlumnosTapped" />
                    </Frame>

                    <!-- BotÃ³n Gestionar Profesores -->
                    <Frame CornerRadius="4" BorderColor="#DDD" BackgroundColor="White" Padding="12" HasShadow="False">
                        <Button 
                Text="Gestionar Profesores" 
                Style="{StaticResource CardButtonStyle}" 
                WidthRequest="200" 
                HorizontalOptions="Center" 
                Clicked="OnSidebarGestionProfesoresTapped" />
                    </Frame>

                </VerticalStackLayout>
            </ScrollView>

            <ScrollView
    Grid.Row="1"
    Grid.Column="1"
    Padding="20"
    x:Name="AreaCrearServidor"
    IsVisible="False">

                <Frame BackgroundColor="White">
                    <VerticalStackLayout Spacing="20" Padding="10">
                        <Label Text="CREAR SERVIDOR EN DISCORD" FontSize="30" TextColor="Black" HorizontalOptions="Center" FontAttributes="Bold"/>

                        <!-- AquÃ­ podrÃ­as poner los controles para crear un servidor -->
                        <Label x:Name="ServidorNombreEntry" TextColor="Black" HorizontalOptions="Center" FontSize="20" FontAttributes="Italic" />

                        <Button Text="Crear Servidor" Style="{StaticResource CardButtonStyle}" Clicked="CrearServidorDiscord" HorizontalOptions="Center" WidthRequest="200"/>
                    </VerticalStackLayout>
                </Frame>
            </ScrollView>



            <ScrollView
    Grid.Row="1"
    Grid.Column="1"
    Padding="20"
    x:Name="AreaEliminarServidor"
    IsVisible="False">

                <Frame BackgroundColor="White">
                    <VerticalStackLayout Spacing="20" Padding="10">
                        <Label Text="ELIMINAR SERVIDOR EN DISCORD" FontSize="30" TextColor="Black" HorizontalOptions="Center" FontAttributes="Bold"/>

                        <!-- AquÃ­ podrÃ­as poner los controles para crear un servidor -->
                        <Label x:Name="ServidorNombreEntryEliminar" TextColor="Black" HorizontalOptions="Center" FontSize="20" FontAttributes="Italic" />

                        <Button Text="Eliminar Servidor" Style="{StaticResource CardButtonStyle}" Clicked="EliminarServidorDiscord" HorizontalOptions="Center" WidthRequest="200"/>
                    </VerticalStackLayout>
                </Frame>
            </ScrollView>

            <ScrollView
    Grid.Row="1"
    Grid.Column="1"
    Padding="20"
    x:Name="AreaAÃ±adirCurso"
    IsVisible="False">

                <Frame BackgroundColor="White">
                    <VerticalStackLayout>

                        <Label Text="AÃ±adir curso" TextColor="Black" FontSize="20"/>

                        <Grid Padding="20" ColumnDefinitions="*,*,*,*,*" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto">
                            <!-- Nivel -->
                            <Label Text="Nivel" HorizontalOptions="Center" TextColor="Black" Grid.Row="0" Grid.Column="0" Margin="0,10,0,10"/>
                            <Picker x:Name="NivelPicker" BackgroundColor="LightGray" TextColor="Black" HorizontalOptions="FillAndExpand" Grid.Row="1" Grid.Column="0" Margin="0,0,0,20"/>

                            <!-- Familia -->
                            <Label Text="Familia" HorizontalOptions="Center" TextColor="Black" Grid.Row="0" Grid.Column="1" Margin="0,10,0,10"/>
                            <Picker x:Name="FamiliaPicker" BackgroundColor="LightGray" TextColor="Black" HorizontalOptions="FillAndExpand" Grid.Row="1" Grid.Column="1" Margin="0,0,0,20"/>

                            <!-- Curso -->
                            <Label Text="Curso" HorizontalOptions="FillAndExpand" TextColor="Black" Grid.Row="0" Grid.Column="2" Margin="0,10,0,10"/>

                            <!-- Curso 1Âº -->
                            <VerticalStackLayout Grid.Row="1" Grid.Column="2">
                                <HorizontalStackLayout HorizontalOptions="Start" VerticalOptions="Center" Spacing="10">
                                    <CheckBox x:Name="Curso1" IsChecked="{Binding Opciones1[0].EsSeleccionado}" />
                                    <Label Text="1Âº" TextColor="Black" VerticalOptions="Center"/>
                                </HorizontalStackLayout>

                                <!-- Curso 2Âº -->
                                <HorizontalStackLayout HorizontalOptions="Start" VerticalOptions="Center" Spacing="10">
                                    <CheckBox x:Name="Curso2" IsChecked="{Binding Opciones2[0].EsSeleccionado}" />
                                    <Label Text="2Âº" TextColor="Black" VerticalOptions="Center"/>
                                </HorizontalStackLayout>

                            </VerticalStackLayout>

                            <!-- Grado -->
                            <Label Text="Grado" HorizontalOptions="FillAndExpand" TextColor="Black" Grid.Row="0" Grid.Column="3" Margin="0,10,0,10"/>
                            <Picker x:Name="CursoPicker" BackgroundColor="LightGray" TextColor="Black" HorizontalOptions="FillAndExpand" Grid.Row="1" Grid.Column="3" WidthRequest="400" Margin="0,0,0,20"/>

                            <!-- BotÃ³n "+" (Este ocupa 3 filas y es mÃ¡s grande) -->
                            <Button Text="+" FontSize="60" BackgroundColor="Transparent" Clicked="AddCurso" Grid.Row="0" Grid.Column="4" Grid.RowSpan="2" HorizontalOptions="FillAndExpand"/>
                        </Grid>



                        <!-- CollectionView para mostrar los cursos aÃ±adidos -->
                        <CollectionView x:Name="CursosCollectionView" ItemsSource="{Binding Cursos}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BorderColor="#DDD" BackgroundColor="White" Padding="10" Margin="5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- BotÃ³n para eliminar (en la parte superior derecha) -->
                                            <Button Text="X" 
             HorizontalOptions="End"
             VerticalOptions="Start"
             BackgroundColor="Transparent"
             TextColor="Red"
             BorderColor="Transparent"
             Clicked="OnEliminarCursoClicked" 
             WidthRequest="30" HeightRequest="30"/>

                                            <!-- InformaciÃ³n del curso -->
                                            <VerticalStackLayout Grid.Row="1">
                                                <Label Text="{Binding Nivel}" FontSize="16" TextColor="Black"/>
                                                <Label Text="{Binding Familia}" FontSize="16" TextColor="Black"/>
                                                <Label Text="{Binding CursosSeleccionados}" FontSize="16" TextColor="Black"/>
                                                <Label Text="{Binding Grado}" FontSize="16" TextColor="Black"/>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <Button 
         Style="{StaticResource CardButtonStyle}"
         Text="AÃ±adir Cursos"
         Clicked="AÃ±adirCursos"/>
                    </VerticalStackLayout>
                </Frame>
            </ScrollView>


            <ScrollView
    Grid.Row="1"
    Grid.Column="1"
    Padding="20"
    x:Name="AreaGestionAlumnos"
    IsVisible="False">

                <Frame BackgroundColor="White">
                    <VerticalStackLayout Spacing="15" Padding="10">
                        <Label Text="GESTIONAR ALUMNOS" FontSize="30" TextColor="Black" HorizontalOptions="Center"/>

                        <!-- Filtro de bÃºsqueda -->
                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                            <Label Text="Buscar:" TextColor="Black" VerticalOptions="Center"/>
                            <Entry x:Name="BuscarAlumnoEntry" Placeholder="Nombre o apellido" BackgroundColor="LightCyan" TextColor="Black" HorizontalOptions="FillAndExpand"/>
                            <Button Text="ðŸ”" BackgroundColor="LightCyan" Clicked="BuscarAlumno_Clicked" WidthRequest="50"/>
                        </HorizontalStackLayout>

                        <!-- Lista de alumnos -->
                        <CollectionView x:Name="AlumnosCollectionView" ItemsSource="{Binding Alumnos}" Margin="0,10,0,0" HeightRequest="300">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BorderColor="#DDD" BackgroundColor="White" Padding="10" Margin="5">
                                        <Grid ColumnDefinitions="Auto,Auto, *,Auto" VerticalOptions="Center">
                                            <Label Text="{Binding Nombre}" FontSize="16" TextColor="Black" Grid.Column="0" VerticalOptions="Center" Margin="0,0,5,0" />
                                            <Label Text="{Binding Apellido}" FontSize="16" TextColor="Black" Grid.Column="1" VerticalOptions="Center" Margin="0,0,10,0" />
                                            <Button Text="ðŸ—‘ï¸" BackgroundColor="Red" Grid.Column="3" VerticalOptions="Center" HorizontalOptions="End" Clicked="OnEliminarAlumnoClicked"/>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                    </VerticalStackLayout>
                </Frame>
            </ScrollView>

            <ScrollView
    Grid.Row="1"
    Grid.Column="1"
    Padding="20"
    x:Name="AreaGestionProfesores"
    IsVisible="False">

                <Frame BackgroundColor="White">
                    <VerticalStackLayout Spacing="15" Padding="10">
                        <Label Text="GESTIONAR PROFESORES" FontSize="30" TextColor="Black" HorizontalOptions="Center"/>

                        <!-- Filtro de bÃºsqueda -->
                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                            <Label Text="Buscar:" TextColor="Black" VerticalOptions="Center"/>
                            <Entry x:Name="BuscarProfesorEntry" Placeholder="Nombre o apellido" BackgroundColor="LightCyan" TextColor="Black" HorizontalOptions="FillAndExpand"/>
                            <Button Text="ðŸ”" BackgroundColor="LightCyan" Clicked="BuscarProfesor_Clicked" WidthRequest="50"/>
                        </HorizontalStackLayout>

                        <!-- Lista de profesores -->
                        <CollectionView x:Name="ProfesoresCollectionView" ItemsSource="{Binding Profesores}" Margin="0,10,0,0" HeightRequest="300">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BorderColor="#DDD" BackgroundColor="White" Padding="10" Margin="5">
                                        <Grid ColumnDefinitions="Auto,Auto, *,Auto" VerticalOptions="Center">
                                            <Label Text="{Binding Nombre}" FontSize="16" TextColor="Black" Grid.Column="0" VerticalOptions="Center" Margin="0,0,5,0" />
                                            <Label Text="{Binding Apellido}" FontSize="16" TextColor="Black" Grid.Column="1" VerticalOptions="Center" Margin="0,0,10,0" />
                                            <Button Text="ðŸ—‘ï¸" BackgroundColor="Red" Grid.Column="3" VerticalOptions="Center" HorizontalOptions="End" Clicked="OnEliminarProfesorClicked"/>
                                        </Grid>
                                    </Frame>

                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                    </VerticalStackLayout>
                </Frame>
            </ScrollView>


            <ScrollView
    Grid.Row="1"
    Grid.Column="1"
    Padding="20"
    x:Name="AreaEliminarCurso"
    IsVisible="False">

                <Frame BackgroundColor="White">
                    <VerticalStackLayout Padding="10" Spacing="15">
                        <Label Text="ELIMINAR CURSO" FontSize="30" TextColor="Black" HorizontalOptions="Center"/>

                        <CollectionView x:Name="CursosParaEliminarCollectionView" ItemsSource="{Binding Cursos}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BorderColor="#DDD" BackgroundColor="White" Padding="10" Margin="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <HorizontalStackLayout>
                                                <Label Text="{Binding CursosSeleccionados}" FontSize="16" TextColor="Black" Margin="0,0,5,0" VerticalOptions="Center"/>
                                                <Label Text="{Binding Grado}" FontSize="16" TextColor="Black" VerticalOptions="Center"/>
                                            </HorizontalStackLayout>

                                            <Button Text="ðŸ—‘ï¸"
                                        Grid.Column="1" 
                                        BackgroundColor="Red" 
                                        TextColor="White" 
                                                    VerticalOptions="Center"
                                        Clicked="OnEliminarCursoClicked"  />
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>
            </ScrollView>

        </Grid>
    </Grid>
</ContentPage>
