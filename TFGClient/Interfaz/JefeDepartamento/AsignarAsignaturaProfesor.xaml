<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TFGClient.AsignarAsignaturaProfesor"
    BackgroundColor="#80000000">

    <ContentPage.Resources>
        <Style x:Key="CardButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#296ACC" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="WidthRequest" Value="120"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource CardButtonStyle}">
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="TextColor" Value="#296ACC" />
            <Setter Property="BorderColor" Value="#296ACC" />
            <Setter Property="BorderWidth" Value="2" />
        </Style>
    </ContentPage.Resources>

    <Frame
        WidthRequest="800"
        HeightRequest="500"
        BackgroundColor="White"
        CornerRadius="20"
        Padding="25"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        HasShadow="True">

        <VerticalStackLayout Spacing="15">

            <!-- TÃ­tulo -->
            <Label Text="Asignar asignaturas a profesores" 
                   FontAttributes="Bold" 
                   FontSize="20"
                   TextColor="Black"/>

            <!-- Selector Profesor -->
            <Label Text="Profesor" FontAttributes="Bold" FontSize="16" TextColor="Black"/>
            <Picker x:Name="ProfesorPicker"
 
                    HeightRequest="40"
                    BackgroundColor="Red"/>
            <VerticalStackLayout HorizontalOptions="FillAndExpand" >
                    <Label Text="Curso y Grado" Margin="0,10,0,10" TextColor="Black"/>
                    <Picker x:Name="GradoPicker" Margin="0,0,0,20" BackgroundColor="Red" TextColor="Black" HorizontalOptions="FillAndExpand" />
                </VerticalStackLayout>

                <!-- Asignaturas: Entradas para texto -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Asignatura" FontAttributes="Bold" FontSize="16" TextColor="Black"/>
                <Entry x:Name="AsignaturaEntry" Placeholder="Asignatura" BackgroundColor="#F0F0F0" />
            </VerticalStackLayout>

            <!-- Botones Guardar y Cancelar -->
            <HorizontalStackLayout Spacing="20" HorizontalOptions="End" Margin="0,15,0,0">
                <Button Text="Guardar" Style="{StaticResource CancelButtonStyle}" Clicked="Guardar_Clicked" WidthRequest="110" />
                <Button Text="Cancelar" Style="{StaticResource CardButtonStyle}" Clicked="Cancelar_Clicked" WidthRequest="110" />
            </HorizontalStackLayout>

        </VerticalStackLayout>

    </Frame>

</ContentPage>
