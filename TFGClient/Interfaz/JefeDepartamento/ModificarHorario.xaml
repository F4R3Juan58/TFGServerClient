<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TFGClient.ModificarHorario"
    BackgroundColor="#80000000">
    
    <!-- Fondo semitransparente para simular popup -->
    <ContentPage.Resources>
        <Style x:Key="CardButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#296ACC" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="WidthRequest" Value="100"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>
    </ContentPage.Resources>

    <Frame
        WidthRequest="500"
        HeightRequest="550"
        BackgroundColor="White"
        CornerRadius="20"
        Padding="20"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        HasShadow="True">

        <VerticalStackLayout Spacing="15">

            <Label Text="Modificar el horario acadÃ©mico"
                   TextColor="Black"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Profesor -->
            <Label Text="Profesor" TextColor="Black"/>
            <Picker x:Name="profesorPicker" BackgroundColor="Red"/>


            <!-- DÃ­a -->
            <Label Text="Franja Horaria" TextColor="Black"/>
            <Picker x:Name="diaPicker"  BackgroundColor="Red">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Vespertino</x:String>
                        <x:String>Diurno</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <!-- Horario -->
            <Label Text="Horario" TextColor="Black"/>
            <Picker x:Name="horarioPicker"  BackgroundColor="Red">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>8:15 - 15:15</x:String>
                        <x:String>15:30 - 21:30</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <!-- Botones -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20" Margin="0,20,0,0">
                <Button Text="Guardar" Style="{StaticResource CardButtonStyle}" Clicked="Guardar_Clicked" />
                <Button Text="Cancelar" BackgroundColor="White" TextColor="#296ACC" BorderColor="#296ACC" BorderWidth="1" CornerRadius="4" Padding="6" WidthRequest="100" Clicked="Cancelar_Clicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>

    </Frame>
</ContentPage>